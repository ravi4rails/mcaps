<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h3>Listing Subjects</h3>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3><%= link_to 'New Subject', new_subject_path, class: "btn btn-primary pull-right", :"data-toggle" => "modal" ,:"data-target" => "#subject-modal", :remote=> true %></h3>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="subject-index">
        <% @subjects.each do |subject| %>
          <tr id="subject_<%= subject.id%>">
            <td><%= subject.name %></td>
            <td><%= link_to 'Show', subject %></td>
            <td><%= link_to 'Edit', edit_subject_path(subject), :remote => true %></td>
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="modal fade" id="subject-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  </div>
  <div class="modal fade" id="edit-subject-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  </div>
</div>