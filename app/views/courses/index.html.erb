<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h3>Listing Courses</h3>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3><%= link_to 'New Course', new_course_path, class: "btn btn-primary pull-right", :"data-toggle" => "modal" ,:"data-target" => "#course-modal", :remote=> true %></h3>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Stream</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="course-index">
        <% @courses.each do |course| %>
          <tr id="course_<%= course.id%>">
            <td><%= course.name %></td>
            <td><%= course.stream %></td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course), :remote => true %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="modal fade" id="course-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  </div>
  <div class="modal fade" id="edit-course-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  </div>
</div>