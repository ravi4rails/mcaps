<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <div class="jumbotron">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :middle_name %>
    <%= f.text_field :middle_name, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :date_of_birth %>
      <%= f.text_field :date_of_birth, class: "form-control datepicker" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :age %>
      <%= f.number_field :age, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :contact %>
      <%= f.text_field :contact, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :blood_group %>
      <%= f.select :blood_group, options_for_select(Student::BLOOD_GROUP),{include_blank: 'Select Blood Group'}, { :class => 'form-control'} %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :relegion %>
      <%= f.select :relegion, options_for_select(Student::RELEGION),{include_blank: 'Select Relegion'}, { :class => 'form-control'} %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :category %>
      <%= f.select :category, options_for_select(Student::CATEGORY),{include_blank: 'Select Category'}, { :class => 'form-control'} %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :course_id %>
      <%= f.number_field :course_id, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <%= f.label :profile_picture %>
      <%= f.file_field :profile_picture, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= f.label :address %>
      <%= f.text_area :address, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Back', students_path, class: "btn btn-primary" %>
  </div>
<% end %>
<script type="text/javascript">
  $(".datepicker").datepicker({
    format: "yyyy-mm-dd"
  });
</script>