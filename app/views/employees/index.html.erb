<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-md-6 col-xs-12">
        <h3>Listing Employees</h3>
      </div>
      <div class="col-md-6 col-xs-12">
        <h3><%= link_to 'New Employee', new_employee_path, class: "btn btn-primary pull-right" %></h3>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date of birth</th>
          <th>Date of joining</th>
          <th>Qualification</th>
          <th>Address</th>
          <th>Contact</th>
          <th>Gender</th>
          <th>Job title</th>
          <th>Email</th>
          <th>Employee department</th>
          <th>Employee grade</th>
          <th>Age</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.full_name %></td>
            <td><%= employee.date_of_birth %></td>
            <td><%= employee.date_of_joining %></td>
            <td><%= employee.qualification %></td>
            <td><%= employee.address %></td>
            <td><%= employee.contact %></td>
            <td><%= employee.gender %></td>
            <td><%= employee.job_title %></td>
            <td><%= employee.email %></td>
            <td><%= employee.employee_department_id %></td>
            <td><%= employee.employee_grade_id %></td>
            <td><%= employee.age %></td>
            <td><%= link_to 'Show', employee %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>