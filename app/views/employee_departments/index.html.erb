<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h3>Listing Employee Departments</h3>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3><%= link_to 'New Employee department', new_employee_department_path, class: "btn btn-primary pull-right", :"data-toggle" => "modal" ,:"data-target" => "#department", :remote=> true %></h3>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="department-index">
        <% @employee_departments.each do |employee_department| %>
          <tr id="employee_department_<%= employee_department.id%>">
            <td><%= employee_department.name %></td>
            <td><%= employee_department.code %></td>
            <td><%= link_to 'Show', employee_department %></td>
            <td><%= link_to 'Edit', edit_employee_department_path(employee_department), :remote => true %></td>
            <td><%= link_to 'Destroy', employee_department, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="modal fade" id="department" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-department" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>